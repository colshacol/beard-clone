
footer {
  width: 90%;
  height: 300px;
  background: white;
  isRow(between, center)
  isCentered();
  #left {
    isColumn(start, center);
    & > p:first-of-type {
      letter-spacing: 0;
    }
    #images {
      margin-top: 20px;
      img {
        width: 30px;
        height: 30px;
        margin-right: 15px;
      }
    }
    #links {
      margin-top: 25px;
      isColumn(start, start)
      a {
        text-decoration: underline;
        font-size: 1.2rem;
        &:nth-of-type(2) {
          margin-bottom: 20px;
        }
        &:hover {
          color: inherit;
        }
      } 
    }
  }
  #right {
    width: 30%;
    isColumn(start, center);
    & > p:first-of-type {
      font-weight: bold;
      text-decoration: underline;
    }
    & > p:last-of-type {
      font-size: 1.4rem;
      margin-top: 15px;
    }
    & > small {
      font-size: 1.2rem;
    }
    #social {
      margin-top: 15px;
      img {
        width: 35px;
        height: 40px;
        margin-right: 10px;
      }
    }
    #login {
      margin-top: 15px;
      isRow(start, center)
      img {
        width: 20px;
        height: 20px;
        margin-right: 10px;
      }
    }
  }
}
