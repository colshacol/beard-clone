// // // // // // // // // // // // // // //
// Text Content

small {
  font-size: 0.8rem;
}

strong {
  font-weight: 700;
}

em, dfn {
  font-style: italic;
}

// // // // // // // // // // // // // // //
// Code

pre, code, kbd, samp {
  font-family: sans-serif;
  font-size: 1em; /* 2 */
}

// // // // // // // // // // // // // // //
// Links/Anchors

a, button { cursor: pointer; }

a {
  background-color: transparent;
  -webkit-text-decoration-skip: objects;
  text-decoration: none;
  color: black;
  &:visited, &:hover, &:active {
    color: black;
  }
}

// // // // // // // // // // // // // // //
// Inputs

button, textarea, input {
  outline: none;
  border: none;
  &:active, &:hover, &:focus {
    outline: none;
    border: none;
  }
}

